<Page x:Class="Фотостудия.Pages.RegistrationJournal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Фотостудия.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationJournal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Логин" FontSize="20" Margin="100, 0, 0, 0"/>
            <Label Content="ФИО" FontSize="20" Margin="80, 0 ,0 ,0"/>
            <Label Content="Дата входа" FontSize="20" Margin="70, 0 ,0 ,0"/>
            <Label Content="Тип пользователя" FontSize="20" Margin="30, 0 ,0 ,0"/>
        </StackPanel>
        <ListView Name="lw1" HorizontalContentAlignment="Center" FontSize="16" Grid.Row="1"></ListView>
    </Grid>
</Page>
